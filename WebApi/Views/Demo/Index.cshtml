@using Data.Models
@using Newtonsoft.Json;

@model Data.Models.UserLogin

<div class="container">
    <div class="row">
        <div class="col mt-3">
            <form id="loginForm" method="post" asp-controller="Demo" asp-action="Login">
                <div class="form-group">
                    <label asp-for="Username">UserName:</label>
                    <input asp-for="Username" placeholder="Enter username" class="form-control">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password:</label>
                    <input asp-for="Password" type="password" placeholder="Enter password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                <div asp-validation-summary="All" class="mt-3"></div>
            </form>
        </div>
    </div>
</div>

